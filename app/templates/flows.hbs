<div class="content">
<div class="ui relaxed celled list">
  {{#each-in content as |name flow|}}
  <div class="item">
    <i class="large middle aligned icon"></i>
    <div class="content">
      {{#link-to 'flow' flow class="header"}}{{flow.name}}{{/link-to}}
      {{#if flow.isPending}}
        pending...
      {{else}}
        <div class="description">{{flow.description}}</div>
      {{/if}}
    </div>
  </div>
  {{/each-in}}
</div>
<form class="ui form">
  <div class="field">
    <div class="field">
      <input id="file" type="file" name="file" placeholder="flow file"/>
    </div>
  </div>
  <div class="ui button" tabindex="0" {{action "create"}}>Upload Flow</div>
</form>
</div>
